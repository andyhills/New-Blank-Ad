{
    "manifest_version": 2,

    "name": "New Blank Ad",
    "description": "Creates a new blank ad",
    "version": "1.0",
    "author": "Andy Hills",

    "browser_action": {"default_icon": "icon.png"},
    "icons": {"128": "icon.png"},

    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "webRequest",
        "webNavigation"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }

}
